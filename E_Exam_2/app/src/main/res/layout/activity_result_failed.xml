<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="#E0E0E0"
    android:stretchColumns="1"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TableRow android:layout_marginTop="72dp">

        <TextView
            android:text="Final Result"
            android:layout_gravity="center_horizontal"
            android:layout_span="2"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="24sp"/>
    </TableRow>

    <TableRow android:layout_marginTop="64dp">
        <TextView
            android:text="Name : "
            android:layout_marginRight="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_namme2"
            android:text="Name : "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </TableRow>

    <TableRow android:layout_marginTop="16dp">
        <TextView
            android:text="Wrong Answes : "
            android:layout_marginRight="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_wrong2"
            android:text=" "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </TableRow>

    <TableRow android:layout_marginTop="16dp">

        <TextView
            android:text="Correct Answers : "
            android:layout_marginRight="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_correct2"
            android:text=" "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </TableRow>

    <TableRow android:layout_marginTop="16dp">

        <TextView
            android:text="Final Score : "
            android:layout_marginRight="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_result2"
            android:text=" "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </TableRow>

    <TableRow android:layout_marginTop="64dp">

        <TextView
            android:text="FAILED"
            android:layout_gravity="center_horizontal"
            android:layout_span="2"
            android:textColor="@color/failed"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="48sp"/>

    </TableRow>




</TableLayout>