<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/text_view_access_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCESS_CODE"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_text_access_code_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view_access_code"/>

    <Button
        android:id="@+id/to_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_access_code_student"
        android:layout_marginTop="6dp"
        android:text="to exam" />
</RelativeLayout>